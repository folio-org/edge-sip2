{
  "request": {
    "method": "POST",
    "urlPath": "/circulation/renew-by-barcode",
    "headers": {
      "x-okapi-tenant": {
        "equalTo": "testtenant"
      },
      "x-okapi-token": {
        "equalTo": "test-jwt"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": "$[?(@.itemBarcode == 'nonRenewableItem456')]"
      },
      {
        "matchesJsonPath": "$[?(@.userBarcode == 'testBarcode')]"
      },
      {
        "matchesJsonPath": "$[?(@.servicePointId == '1a62fa88-e887-4454-a345-24b4a01095fa')]"
      }
    ]
  },
  "response": {
    "status": 201,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "id": "loan-id-456",
      "userId": "user-id-456",
      "itemId": "item-id-999",
      "dueDate": "2026-03-01T23:59:59.000Z",
      "loanDate": "2026-02-01T10:00:00.000Z",
      "renewalCount": 0,
      "item": {}
    }
  }
}
