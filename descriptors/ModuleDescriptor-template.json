{
  "id": "${artifactId}-${version}",
  "name": "SIP2 Module",
  "provides": [],
  "requires": [
    {
      "id": "login",
      "version": "7.3"
    },
    {
      "id": "circulation",
      "version": "14.6"
    },
    {
      "id": "users",
      "version": "16.4"
    },
    {
      "id": "configuration",
      "version": "2.0"
    },
    {
      "id": "feesfines",
      "version": "19.1"
    },
    {
      "id": "search-inventory",
      "version": "1.0"
    },
    {
      "id": "users-bl",
      "version": "6.1"
    }
  ],
  "permissionSets": [
    {
      "permissionName" : "edge-sip.all",
      "displayName" : "All permission associated with edge-sip2",
      "description" : "All permissions edge-sip scope",
      "subPermissions" : [
        "accounts.collection.get",
        "circulation.check-in-by-barcode.post",
        "circulation.check-out-by-barcode.post",
        "circulation.loans.collection.get",
        "circulation.renew-by-barcode.post",
        "circulation.requests.collection.get",
        "configuration.entries.collection.get",
        "feefines.collection.get",
        "feesfines.accounts-bulk.pay.post",
        "feesfines.accounts.pay.post",
        "inventory-storage.holdings.item.get",
        "inventory.instances.item.get",
        "inventory.items.collection.get",
        "manualblocks.collection.get",
        "patron-pin.validate",
        "search.instances.collection.get",
        "users-bl.item.get",
        "users.collection.get"
      ]
    }
  ],
  "launchDescriptor": {
    "dockerImage": "${artifactId}:${version}",
    "dockerPull": false,
    "dockerArgs": {
      "HostConfig": {
        "Memory": 268435456,
        "PortBindings": { "8081/tcp": [ { "HostPort": "%p" } ] }
      }
    },
    "env": [
      { "name": "JAVA_OPTIONS",
        "value": "-XX:MaxRAMPercentage=66.0"
      },
      { "name": "HEALTH_CHECK_PORT", "value": "8081"}
    ]
  }
}
